<h1>Beer Clubs</h1>

<div id="beer_clubs">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= link_to "Name", beer_clubs_path(order: "name") %></th>
        <th><%= link_to "Founded", beer_clubs_path(order: "founded") %></th>
        <th><%= link_to "City", beer_clubs_path(order: "city") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @beer_clubs.each do |beer_club| %>
      <tr>
        <th><%= beer_club.name %></th>
        <th><%= beer_club.founded %></th>
        <th><%= beer_club.city %></th>
        <th>
          <%= link_to "Show this beer club", beer_club %>
        </th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to("New beer club", new_beer_club_path, class:"btn btn-primary") unless current_user.nil? %>
