<h1>Beers</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Beer</th>
      <th>Style</th>
      <th>Brewery</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @beers.each do |beer| %>
      <tr id="<%= dom_id beer %>">
        <th><%= link_to beer.name, beer %></th>
        <th><%= link_to beer.style.name, beer.style %></th>
        <th><%= link_to beer.brewery.name, beer.brewery %></th>
        <% if beer.ratings %>
          <th><%= beer.average_rating.to_s%></th>
        <% else %>
        <th>0.0</th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('New Beer', new_beer_path, class:'btn btn-primary') if current_user %>
