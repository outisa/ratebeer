<h1>Beers</h1>

<% cache "beerlist-#{@order}", skip_digest: true do %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= link_to "Name", beers_path(order: "name")%></th>
        <th><%= link_to "Style", beers_path(order: "style")%></th>
        <th><%= link_to "Brewery", beers_path(order: "brewery")%></th>
        <th><%= link_to "Rating Average", beers_path(order: "rating")%></th>
      </tr>
    </thead>
    <tbody>
      <% @beers.each do |beer| %>
        <tr id="<%= dom_id beer %>">
          <th><%= link_to beer.name, beer %></th>
          <th><%= link_to beer.style.name, beer.style %></th>
          <th><%= link_to beer.brewery.name, beer.brewery %></th>
          <th><%= round(beer.average_rating).to_s%></th>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to('New Beer', new_beer_path, class:'btn btn-primary') if current_user %>
