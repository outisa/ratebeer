<h1>Listing breweries</h1>
<h2>Active</h2>

<p> Number of active breweries: <%= @active_breweries.count %> </p>
<div id="breweries">
<% cache "active-brewerylist", skip_digest: true do %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Brewery</th>
        <th>Founded</th>
        <th>Beers</th>
        <th>Rating</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @active_breweries.each do |brewery| %>
        <tr id="<%= dom_id brewery %>">
          <td><%= link_to brewery.name, brewery %></td>
          <td><%= brewery.year %></td>
          <td><%= brewery.beers.count %></td>
          <td><%= round(brewery.average_rating) %></td>
          <th><span class="badge bg-success">active</span></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h2>Retired</h2>

<p> Number of retired breweries: <%= @retired_breweries.count %> </p>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Brewery</th>
        <th>Year</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @retired_breweries.each do |brewery| %>
        <tr id="<%= dom_id brewery %>">
          <th><%= link_to brewery.name, brewery %></th>
          <th><%= brewery.year %></th>
          <th><span class="badge bg-secondary">retired</span></th>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
</div>
<%= link_to("New brewery", new_brewery_path) unless current_user.nil? %>
