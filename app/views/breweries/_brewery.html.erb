<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
  </h2>

  <p>
    <i>Established in
    <%= brewery.year %>
    </i>
  </p>
  <p>
    <strong>Beers:</strong>
    <%= brewery.beers.count %>
    </i>

  <p>
  <% brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
  </p>
</div>